{
   "env": {
      "browser": true,
      "es2021": true
   },
   "extends": [
      "standard-with-typescript",
      "plugin:react/recommended"
   ],
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },
   "plugins": [
      "react"
   ],
   "rules": {
      // Note: you must disable the base rule as it can report incorrect errors
      "indent": "off",
      "@typescript-eslint/indent": ["error", 4]
   }
}
